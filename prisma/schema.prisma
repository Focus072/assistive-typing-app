// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String?  // Optional - Google OAuth users don't have passwords
  name          String?
  image         String?
  createdAt     DateTime @default(now())
  googleTokens  GoogleToken?
  jobs          Job[]
}

model GoogleToken {
  id            String   @id @default(cuid())
  userId        String   @unique
  accessToken   String
  refreshToken  String
  expiresAt     DateTime
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Job {
  id              String   @id @default(cuid())
  userId          String
  documentId      String
  textContent     String   @db.Text
  totalChars      Int
  currentIndex    Int      @default(0)
  durationMinutes Int
  typingProfile   String   // steady, fatigue, burst, micropause
  status          String   // pending, running, paused, completed, failed, stopped, expired
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  completedAt     DateTime?
  expiresAt       DateTime // TTL for cleanup
  inngestEventId  String?
  lastBatchHash   String?  // Hash of last inserted batch for idempotency
  throttleDelayMs Int      @default(500) // Adaptive throttling delay
  errorCode       String?  // Specific error codes (GOOGLE_AUTH_REVOKED, etc.)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  events          JobEvent[]

  @@index([userId, status])
  @@index([status, createdAt])
}

model JobEvent {
  id        String   @id @default(cuid())
  jobId     String
  type      String   // started, batch_success, paused, resumed, failed, stopped, throttled, etc.
  details   String?  @db.Text // JSON or text details
  createdAt DateTime @default(now())
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([createdAt])
}


